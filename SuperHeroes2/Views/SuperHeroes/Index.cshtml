@model IEnumerable<SuperHeroes2.Models.SuperHero>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <img src="~/images/MightyMouse.png" alt="Mighty Mouse" />
</div>

<h1>Index</h1>

<p>
    <a class="btn btn-outline-primary btn-sm" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlterEgo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryAbility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryAbility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatchPhrase)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="table-primary">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="table-secondary">
                    @Html.DisplayFor(modelItem => item.AlterEgo)
                </td>
                <td class="table-primary">
                    @Html.DisplayFor(modelItem => item.PrimaryAbility)
                </td>
                <td class="table-secondary">
                    @Html.DisplayFor(modelItem => item.SecondaryAbility)
                </td>
                <td class="table-primary">
                    @Html.DisplayFor(modelItem => item.CatchPhrase)
                </td>
                <td>
                    <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-outline-primary btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
